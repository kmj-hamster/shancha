/* passages.css - 卡片内容区和输入区样式 */
/* 参考：history\1017-UI设计\UI设计规范.md#三、右侧区域设计 */

/* 卡片内容区 - 占70-75%高度 */
#card-content-area {
  flex: 7;
  overflow-y: auto;
  padding: 20px 30px;
  border-bottom: 1px solid #00AA00;
}

/* 输入交互区 - 占25-30%高度 */
#input-area {
  flex: 3;
  display: flex;
  flex-direction: column;
  max-height: 30vh;
}

/* 反馈区域 - 占输入区40%高度 */
#feedback-area {
  flex: 2;
  padding: 12px 20px;
  overflow-y: auto;
  border-bottom: 1px solid #00AA00;
}

#feedback-text {
  color: #33FF33;
  font-size: 14px;
  white-space: pre-wrap;
  margin: 0;
}

/* 输入框容器 - 占输入区60%高度，分左右两部分 */
#input-box {
  flex: 3;
  padding: 12px 20px;
  display: flex;
  align-items: center;
  gap: 8px;
  border-right: 1px solid #00AA00;
  width: 80%;
  float: left;
}

.prompt {
  color: #00FF00;
  font-size: 18px;
  font-weight: bold;
  margin-right: 4px;
}

/* 指令提示区 - 占输入区20%宽度 */
#command-help {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 20%;
  height: calc(30vh * 0.6); /* 对应输入框的高度 */
  border-left: 1px solid #00AA00;
  padding: 12px 10px;
  overflow-y: auto;
}

.help-title {
  color: #00FF00;
  font-size: 12px;
  font-weight: bold;
  margin-bottom: 8px;
  border-bottom: 1px solid #00AA00;
  padding-bottom: 4px;
}

.help-list {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.help-item {
  color: #33FF33;
  font-size: 11px;
  padding: 2px 4px;
  line-height: 1.4;
}

/* 卡片标题栏 */
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 12px;
  margin-bottom: 16px;
  border-bottom: 1px solid #00AA00;
}

.card-title {
  color: #FFFFFF;
  font-size: 18px;
  font-weight: bold;
}

.card-timestamp {
  color: #CCCCCC;
  font-size: 14px;
}

/* 卡片图片区 */
.card-image {
  margin-bottom: 20px;
  text-align: center;
}

.card-image img {
  max-width: 100%;
  max-height: 400px;
  object-fit: contain;
  filter: sepia(0.3); /* 复古效果 */
}

.image-placeholder {
  color: #666666;
  font-style: italic;
  padding: 60px 20px;
  background-color: #111111;
  border: 1px dashed #333333;
}

/* 卡片文本区 */
.card-text {
  color: #FFFFFF;
  font-size: 15px;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 线索词高亮 */
.clue-word {
  color: #00FF00;
  border-bottom: 1px dashed #00FF00;
  cursor: pointer;
  transition: all 0.2s;
  padding: 0 2px;
}

.clue-word:hover {
  color: #FFFF00;
  text-shadow: 0 0 5px #FFFF00;
  background-color: rgba(255, 255, 0, 0.1);
}

/* 继续提示 */
.continue-hint {
  margin-top: 30px;
  color: #666666;
  font-size: 12px;
  text-align: center;
}

/* 光标闪烁动画 */
.cursor-blink {
  animation: blink 1s step-end infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  50.01%, 100% { opacity: 0; }
}

/* 无卡片选中 */
.no-card {
  text-align: center;
  color: #666666;
  padding: 60px 20px;
}

.no-card p {
  margin: 10px 0;
}

/* 锁定提示 */
.locked-message {
  color: #FF3333;
  font-size: 18px;
  text-align: center;
  margin: 40px 0 20px 0;
}

.unlock-hint,
.current-progress {
  color: #FFFF00;
  text-align: center;
  margin: 10px 0;
}
